                example: "transform.position = new Vector3(0, 5, 0);"
            },
            {
                name: "Instantiate",
                category: "Unity",
                description: "T·∫°o b·∫£n sao c·ªßa object",
                details: "T·∫°o m·ªôt b·∫£n sao c·ªßa GameObject ho·∫∑c Component.",
                example: "Instantiate(prefab, position, rotation);"
            },
            {
                name: "Vector3.Distance",
                category: "Math",
                description: "T√≠nh kho·∫£ng c√°ch gi·ªØa 2 ƒëi·ªÉm",
                details: "T√≠nh kho·∫£ng c√°ch Euclidean gi·ªØa hai Vector3.",
                example: "float dist = Vector3.Distance(pointA, pointB);"
            },
            {
                name: "Time.deltaTime",
                category: "Time",
                description: "Th·ªùi gian gi·ªØa c√°c frame",
                details: "Th·ªùi gian t√≠nh b·∫±ng gi√¢y ƒë·ªÉ ho√†n th√†nh frame cu·ªëi c√πng.",
                example: "transform.position += velocity * Time.deltaTime;"
            },
            {
                name: "Input.GetKey",
                category: "Input",
                description: "Ki·ªÉm tra ph√≠m ƒë∆∞·ª£c nh·∫•n",
                details: "Tr·∫£ v·ªÅ true trong khi user gi·ªØ ph√≠m ƒë∆∞·ª£c ch·ªâ ƒë·ªãnh.",
                example: "if (Input.GetKey(KeyCode.Space)) { Jump(); }"
            }
        ];

        function renderAPIs(apiList) {
            const grid = document.getElementById('apiGrid');
            grid.innerHTML = '';
            
            apiList.forEach((api, index) => {
                const card = document.createElement('div');
                card.className = 'api-card';
                card.onclick = () => showModal(index);
                card.innerHTML = `
                    <h3>${api.name}</h3>
                    <p>${api.description}</p>
                    <span class="badge">${api.category}</span>
                `;
                grid.appendChild(card);
            });
        }

        function filterAPIs() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const filtered = apis.filter(api => 
                api.name.toLowerCase().includes(searchTerm) ||
                api.description.toLowerCase().includes(searchTerm) ||
                api.category.toLowerCase().includes(searchTerm)
            );
            renderAPIs(filtered);
        }

        function showModal(index) {
            const api = apis[index];
            const modalBody = document.getElementById('modalBody');
            modalBody.innerHTML = `
                <h2>${api.name}</h2>
                <span class="badge">${api.category}</span>
                <h3 style="margin-top: 20px;">M√¥ t·∫£</h3>
                <p>${api.details}</p>
                <h3 style="margin-top: 20px;">V√≠ d·ª•</h3>
                <div class="code-block">${api.example}</div>
            `;
            document.getElementById('modal').classList.add('active');
        }

        function closeModal() {
            document.getElementById('modal').classList.remove('active');
        }

        window.onclick = function(event) {
            const modal = document.getElementById('modal');
            if (event.target === modal) {
                closeModal();
            }
        }

        renderAPIs(apis);
    </script>
